<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lyl.bysj.dao.UserDao">
    <resultMap id="attendDoctorResultMap" type="com.lyl.bysj.pojo.attendDoctor">
        <result column="doctor_id" property="doctorId"/>
        <result column="name" property="doctorName"/>
    </resultMap>
    <select id="selectByDateAndOffice" resultMap="attendDoctorResultMap">
        select d.doctor_id,d.name,d.description,a.number
        from attend a,doctor d,department de
        where
            a.date=#{date}
            <if test="id != 0">and d.office_id=#{id}</if>
            and a.doctor_id=d.doctor_id
            and d.office_id = de.office_id;
    </select>
</mapper>